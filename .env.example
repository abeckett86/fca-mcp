# Required parameters (You need to change these)

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# FCA API Configuration
FCA_API_EMAIL=your-registered-email@example.com
FCA_API_KEY=your-actual-fca-api-key-here
FCA_API_BASE_URL=https://register.fca.org.uk/services/V0.1

# Optional parameters (The defaults are fine)
# OPENAI_API_BASE_URL=https://api.openai.com/v1  # Default OpenAI endpoint, can be customized

APP_NAME=parliament-mcp
AWS_REGION=aws-region
ENVIRONMENT=local
SENTRY_DSN=placeholder
DISABLE_AUTH_SIGNATURE_VERIFICATION=true

MCP_HOST=0.0.0.0
MCP_PORT=8080

# Elasticsearch Configuration
# Option 1: Local/Self-hosted Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_SCHEME=http

# Option 2: Elasticsearch Cloud (use instead of above)
# ELASTICSEARCH_CLOUD_ID=your-cloud-id-here
# ELASTICSEARCH_API_KEY=your-api-key-here
